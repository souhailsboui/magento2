<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MageMe_Core::extensions" title="MageMe Extensions" sortOrder="50">
                    <resource id="MageMe_WebForms::webforms" title="WebForms" sortOrder="10">
                        <resource id="MageMe_WebForms::manage_forms" title="Manage Forms" sortOrder="1">
                            <resource id="MageMe_WebForms::add_form" title="Add Form" sortOrder="10"/>
                            <resource id="MageMe_WebForms::save_form" title="Save Form" sortOrder="20"/>
                            <resource id="MageMe_WebForms::delete_form" title="Delete Form" sortOrder="30"/>
                            <resource id="MageMe_WebForms::edit_result" title="Edit Result" sortOrder="40"/>
                            <resource id="MageMe_WebForms::reply" title="Reply To Customer" sortOrder="50"/>
                        </resource>
                        <resource id="MageMe_WebForms::quickresponse" title="Manage Quick Responses" sortOrder="2"/>
                        <resource id="MageMe_WebForms::api" title="API" sortOrder="3">
                            <resource id="MageMe_WebForms::api_info" title="Get Information" sortOrder="10"/>
                            <resource id="MageMe_WebForms::api_submission" title="Form Submission" sortOrder="15"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageMe_WebForms::settings" title="WebForms" sortOrder="2000"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
