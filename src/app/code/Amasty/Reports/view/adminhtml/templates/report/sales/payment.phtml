use Amasty\Reports\Block\Adminhtml\Report\Chart;
use Magento\Framework\Escaper;

$axis = $block->getAxisFields();
$collection = $block->getCollection();
?>

<div class="amreports-amchart-wrapper" data-role="amreports-content">
    <?php if ($collection->getSize()): ?>

        <?php foreach ($collection as $item) {
            $chartData[] = [
                "date" => $escaper->escapeHtml($item->getData($axis['y'])),
                "payments" => $escaper->escapeHtml($item->getData($axis['x']))
            ];
        } ?>

        <div id="chart-column" data-chart-identifier="payments" class="amreports-amchart-container"></div>

        <script>
            require([
                "Amasty_Reports/vendor/amcharts4/core.min"
            ], function () {
                require([
                    "jquery",
                    "amreports_simple_column_chart"
                ], function ($) {
                    $('#chart-column').columnCharts({
                        "data" : <?= /* @noEscape */ json_encode($chartData); ?>,
                        "currency" : "<?= /* @noEscape */ $block->getCurrencySymbol(); ?>"
                    });
                });
            });
        </script>

        <div class="listing">
            <?= $block->getChildHtml() ?>
        </div>
    <?php endif; ?>
</div>
