use Amasty\Reports\Block\Adminhtml\Report\Chart;
use Magento\Framework\Escaper;

$axis = $block->getAxisFields();
$collection = $block->getCollection();
?>

<div class="amreports-amchart-wrapper" data-role="amreports-content">
    <?php if ($collection->getSize()): ?>

        <?php foreach ($collection as $item) {
            $chartData[] = [
                "date" => $escaper->escapeHtml($item->getData($axis['y'])),
                "new_customers" => $escaper->escapeHtml($item->getData('new_customers')),
                "returning_customers" => $escaper->escapeHtml($item->getData('returning_customers'))
            ];
        } ?>

        <div id="chart-customers" class="amreports-amchart-container" data-chart-identifier="returning-customers"></div>

        <script>
            require([
                "Amasty_Reports/vendor/amcharts4/core.min"
            ], function () {
                require([
                    "jquery",
                    "<?= /* @noEscape */ $block->getWidgetName('amreports_multi_linear_chart') ?>"
                ], function ($, widget) {
                    widget({
                        "data" : <?= /* @noEscape */ json_encode($chartData); ?>,
                        "selectorInit" : "chart-customers"
                    }, $('#chart-customers'));
                });
            });
        </script>

        <div class="listing">
            <?= $block->getChildHtml() ?>
        </div>
    <?php endif; ?>
</div>
