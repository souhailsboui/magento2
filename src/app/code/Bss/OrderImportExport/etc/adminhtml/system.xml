<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="bss" translate="label" sortOrder="300">
            <label>Bss Commerce</label>
        </tab>
        <section id="order_import_export" translate="label" sortOrder="1000" showInDefault="1" showInWebsite="1">
            <label>Order Import Export</label>
            <tab>bss</tab>
            <resource>Bss_OrderImportExport::config</resource>
            <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1">
                <label>General</label>
                <field id="suffix" translate="label" type="text" sortOrder="0" showInDefault="1">
                    <label>Suffix</label>
                    <validate>required-entry validate-data</validate>
                    <comment><![CDATA[Is a suffix added to increment_id if it already exists.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>
