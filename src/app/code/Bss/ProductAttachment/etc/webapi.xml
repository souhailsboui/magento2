<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/bsscommerce/productattachment/getconfig/:store_id" method="GET">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentManagementInterface" method="getConfigById"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url="/V1/bsscommerce/productattachment/getconfig" method="GET">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentManagementInterface" method="getConfig"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url = "/V1/bsscommerce/productattachment/getlist" method="GET">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url = "/V1/bsscommerce/productattachment/:file_id" method="GET">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url="/V1/bsscommerce/productattachment/" method="POST">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url="/V1/bsscommerce/productattachment/:file_id" method="DELETE">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
    <route url="/V1/bsscommerce/productattachment/download/:file_id" method="POST">
        <service class="Bss\ProductAttachment\Api\ProductAttachmentRepositoryInterface" method="downloadTime"/>
        <resources>
            <resource ref="Bss_ProductAttachment::API"/>
        </resources>
    </route>
</routes>
