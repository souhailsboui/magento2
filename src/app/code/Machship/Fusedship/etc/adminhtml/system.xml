<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="fusedship" translate="label" sortOrder="10">
            <label>Fusedship</label>
        </tab>
        <section id="fusedship_config_section" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>fusedship</tab>
            <resource>Machship_Fusedship::config</resource>
            <group id="general_config_group" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="enable_plugin" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Plugin</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="fusedship_integration_key" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Fusedship Integration Key</label>
                </field>

                <field id="enable_debug" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Debug</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <group id="quoting_options_group" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Quoting Options</label>

                 <field id="enable_live_rates" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Live Rates</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="enable_address_lookup" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Postcode/Suburb Lookup</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="lock_suburb" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_address_lookup">1</field>
                    </depends>
                    <label>Lock Suburb</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="lock_postcode" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_address_lookup">1</field>
                    </depends>
                    <label>Lock Postcode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="lookup_field_title" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_address_lookup">1</field>
                    </depends>
                    <label>Lookup Field Title</label>
                </field>

                <field id="lookup_field_placeholder" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_address_lookup">1</field>
                    </depends>
                    <label>Lookup Field Placeholder</label>
                </field>

                <field id="rate_message" translate="label" type="textarea" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_live_rates">1</field>
                    </depends>
                    <label>Rate Messages</label>
                    <comment>Default Message: Getting Rates From Carriers</comment>
                </field>

                <field id="rate_trigger_character" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_live_rates">1</field>
                    </depends>
                    <label>Rate search trigger character limit</label>
                    <comment>Default character limit is 4</comment>
                </field>

                <field id="move_country_above_address" translate="label" type="select" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Move country above address</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="enable_is_show_residential_option" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_live_rates">1</field>
                    </depends>
                    <label>Enable Residential or Business option</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="default_residential_business_option" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_is_show_residential_option">1</field>
                    </depends>
                    <label>Default address type</label>
                    <source_model>Machship\Fusedship\Model\Config\Source\AddressTypes</source_model>
                </field>
            </group>


            <group id="shipping_options_group" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Shipping Options</label>

                <field id="round_shipping_price" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Round Shipping Price</label>
                    <source_model>Machship\Fusedship\Model\Config\Source\RoundShippingOptions</source_model>
                </field>

                <field id="enable_shipping_margin" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Add Margin to Shipping</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="shipping_margin_type" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <depends>
                        <field id="enable_shipping_margin">1</field>
                    </depends>
                    <label>Margin Type</label>
                    <source_model>Machship\Fusedship\Model\Config\Source\MarginTypes</source_model>
                </field>

                <field id="shipping_margin_value" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <depends>
                        <field id="enable_shipping_margin">1</field>
                    </depends>
                    <label>Margin Value</label>
                </field>
            </group>


            <group id="product_widget_options_group" translate="label" type="text" sortOrder="13" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Product Widget Options</label>

                <field id="enable_product_widget" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Product Widget</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="product_widget_title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_product_widget">1</field>
                    </depends>
                    <label>Quick Quote Title</label>
                </field>

                <field id="product_widget_description" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_product_widget">1</field>
                    </depends>
                    <label>Quick Quote Option Description</label>
                </field>

                <field id="product_widget_lookup_field_title" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_product_widget">1</field>
                    </depends>
                    <label>Quick Quote Lookup Field Title</label>
                </field>

                <field id="product_widget_lookup_field_placeholder" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_product_widget">1</field>
                    </depends>
                    <label>Quick Quote Lookup Field Placeholder</label>
                </field>

                <field id="display_in_popup" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="enable_product_widget">1</field>
                    </depends>
                    <label>Display in Pop-up?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="popup_button_label" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="0" showInStore="0">
                    <depends>
                        <field id="display_in_popup">1</field>
                    </depends>
                    <label>Popup Button Label</label>
                </field>
            </group>
        </section>
    </system>
</config>
