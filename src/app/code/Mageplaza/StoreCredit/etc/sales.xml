<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">
    <section name="quote">
        <group name="totals">
            <item name="mp_store_credit_spent" instance="Mageplaza\StoreCredit\Model\Total\Quote\Credit" sort_order="600"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="mp_store_credit_invoice" instance="Mageplaza\StoreCredit\Model\Total\Invoice\Credit" sort_order="500"/>
        </group>
    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="mp_store_credit_creditmemo" instance="Mageplaza\StoreCredit\Model\Total\Creditmemo\Credit" sort_order="500"/>
        </group>
    </section>
    <order>
        <available_product_type name="mpstorecredit"/>
    </order>
</config>
