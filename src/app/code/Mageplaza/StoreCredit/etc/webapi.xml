<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/mpStoreCredit/mine/spending" method="POST">
        <service class="Mageplaza\StoreCredit\Api\SpendingManagementInterface" method="spend"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!--=========================================== STORE CREDIT CUSTOMER =================================================-->
    <route url="/V1/mpStoreCredit/customers" method="GET">
        <service class="Mageplaza\StoreCredit\Api\StoreCreditCustomerRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Mageplaza_StoreCredit::storecredit"/>
        </resources>
    </route>
    <route url="/V1/mpStoreCredit/mine/customer" method="GET">
        <service class="Mageplaza\StoreCredit\Api\StoreCreditCustomerRepositoryInterface" method="getAccountByCustomerId"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/mpStoreCredit/mine/notification" method="POST">
        <service class="Mageplaza\StoreCredit\Api\StoreCreditCustomerRepositoryInterface" method="updateNotification"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <!--=========================================== TRANSACTIONS =================================================-->
    <route url="/V1/mpStoreCredit/transactions" method="GET">
        <service class="Mageplaza\StoreCredit\Api\TransactionRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Mageplaza_StoreCredit::transaction"/>
        </resources>
    </route>
    <route url="/V1/mpStoreCredit/mine/transaction" method="GET">
        <service class="Mageplaza\StoreCredit\Api\TransactionRepositoryInterface" method="getTransactionByCustomerId"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="/V1/mpStoreCredit/transactions" method="POST">
        <service class="Mageplaza\StoreCredit\Api\TransactionRepositoryInterface" method="create"/>
        <resources>
            <resource ref="Mageplaza_StoreCredit::transaction"/>
        </resources>
    </route>
</routes>
