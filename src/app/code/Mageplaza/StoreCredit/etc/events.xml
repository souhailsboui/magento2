<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_load_after">
        <observer name="mpstorecredit_load_customer_with_custom_attribute" instance="Mageplaza\StoreCredit\Observer\CustomerLoadAfter"/>
    </event>
    <event name="customer_save_after">
        <observer name="mpstorecredit_customer_save_after" instance="Mageplaza\StoreCredit\Observer\CustomerSaveAfter"/>
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="mpstorecredit_convert_quote_credit" instance="Mageplaza\StoreCredit\Observer\ConvertQuoteToOrder"/>
    </event>
    <event name="sales_model_service_quote_submit_success">
        <observer name="mpstorecredit_create_spend_credit_transaction" instance="Mageplaza\StoreCredit\Observer\CreateSpendCreditTransaction"/>
    </event>
    <event name="sales_model_service_quote_submit_failure">
        <observer name="mpstorecredit_revert_quote_credit" instance="Mageplaza\StoreCredit\Observer\QuoteSubmitFailure"/>
    </event>
    <event name="sales_order_invoice_save_after">
        <observer name="mpstorecredit_sales_invoice_save_after" instance="Mageplaza\StoreCredit\Observer\SalesInvoiceSaveAfter"/>
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="mpstorecredit_sales_creditmemo_save_after" instance="Mageplaza\StoreCredit\Observer\SalesCreditmemoSaveAfter"/>
    </event>
    <event name="payment_cart_collect_items_and_amounts">
        <observer name="mpstorecredit_paypal_prepare_items" instance="Mageplaza\StoreCredit\Observer\PaypalPrepareItems"/>
    </event>
</config>
