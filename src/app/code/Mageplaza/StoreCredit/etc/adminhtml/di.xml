<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Catalog\Ui\DataProvider\Product\Form\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="store-credit-product" xsi:type="array">
                    <item name="class" xsi:type="string">Mageplaza\StoreCredit\Ui\DataProvider\Product\Modifier\StoreCredit</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Ui\Model\Export\MetadataProvider">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="mpstorecredit_transaction_grid" xsi:type="array">
                    <item name="created_at" xsi:type="string">created_at</item>
                </item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Customer\Ui\Component\DataProvider">
        <plugin name="mpstorecredit_modify_customer_grid" type="Mageplaza\StoreCredit\Plugin\Customer\DataProvider"/>
    </type>
    <type name="Magento\Catalog\Ui\DataProvider\Product\ProductDataProvider">
        <plugin name="mpstorecredit_modify_product_grid" type="Mageplaza\StoreCredit\Plugin\Catalog\ProductDataProvider"/>
    </type>
    <type name="Magento\Sales\Model\Order">
        <plugin name="mpstorecredit_can_creditmemo" type="Mageplaza\StoreCredit\Plugin\Order\View\CanCreditmemo"/>
    </type>
    <type name="Magento\Customer\Model\ResourceModel\Grid\Collection">
        <plugin name="mpstorecredit_modify_customer_grid" type="Mageplaza\StoreCredit\Plugin\Customer\Grid\Collection"/>
    </type>
</config>
