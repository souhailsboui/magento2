<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Url\SecurityInfo">
        <arguments>
            <argument name="secureUrlList" xsi:type="array">
                <item name="mpstorecredit_dashboard" xsi:type="string">/mpstorecredit/</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Customer\CustomerData\Customer">
        <plugin name="mpstorecredit_customer_data" type="Mageplaza\StoreCredit\Plugin\CustomerData\Customer"/>
    </type>
    <type name="Magento\Checkout\Controller\Cart\Index">
        <plugin name="store_credit_disabler" type="Mageplaza\StoreCredit\Plugin\DisableStoreCredit"/>
    </type>
    <type name="Magento\Checkout\Helper\Data">
        <plugin name="store_credit_allow_guest_checkout" type="Mageplaza\StoreCredit\Plugin\Checkout\Helper\Data"/>
    </type>
    <type name="Mageplaza\Osc\Observer\RedirectToOneStepCheckout">
        <plugin name="store_credit_allow_guest_checkout" type="Mageplaza\StoreCredit\Plugin\Osc\RedirectToOneStepCheckout"/>
    </type>
</config>
