<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Mageplaza\StoreCredit\Api\SpendingManagementInterface" type="Mageplaza\StoreCredit\Model\Api\SpendingManagement"/>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mpstorecredit_transaction_grid_data_source" xsi:type="string">Mageplaza\StoreCredit\Model\ResourceModel\Transaction\Grid\Collection</item>
            </argument>
        </arguments>
    </type>

    <!-- Run this command before remove module -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="mpstorecredit_uninstall" xsi:type="object">Mageplaza\StoreCredit\Console\Command\Uninstall</item>
            </argument>
        </arguments>
    </type>

    <type name="Mageplaza\StoreCredit\Model\ActionFactory">
        <arguments>
            <argument name="map" xsi:type="array">
                <item name="admin_update" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Admin</item>
                <item name="earning_order" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Earning\Order</item>
                <item name="earning_refund" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Earning\Refund</item>
                <item name="spending_order" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Spending\Order</item>
                <item name="spending_refund" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Spending\Refund</item>
                <item name="revert" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Revert</item>
                <item name="earning_affiliate" xsi:type="string">Mageplaza\StoreCredit\Model\Action\Earning\Affiliate</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Quote\Model\Quote\Item\ToOrderItem">
        <plugin name="mpstorecredit_move_item_option_to_order_item" type="Mageplaza\StoreCredit\Plugin\Quote\ToOrderItem"/>
    </type>

    <type name="Mageplaza\PdfInvoice\Block\PdfItems">
        <plugin name="mpstorecredit_add_store_credit_custom_options" type="Mageplaza\StoreCredit\Plugin\Block\PdfItems"/>
    </type>

    <preference for="Mageplaza\StoreCredit\Api\Data\StoreCreditCustomerInterface" type="Mageplaza\StoreCredit\Model\Customer"/>
    <preference for="Mageplaza\StoreCredit\Api\Data\StoreCreditCustomerSearchResultInterface" type="Mageplaza\StoreCredit\Model\ResourceModel\Customer\Collection"/>
    <preference for="Mageplaza\StoreCredit\Api\StoreCreditCustomerRepositoryInterface" type="Mageplaza\StoreCredit\Model\StoreCreditCustomerRepository"/>

    <preference for="Mageplaza\StoreCredit\Api\TransactionRepositoryInterface" type="Mageplaza\StoreCredit\Model\TransactionRepository"/>
    <preference for="Mageplaza\StoreCredit\Api\Data\TransactionInterface" type="Mageplaza\StoreCredit\Model\Transaction"/>
    <preference for="Mageplaza\StoreCredit\Api\Data\TransactionSearchResultInterface" type="Mageplaza\StoreCredit\Model\ResourceModel\Transaction\Collection"/>

    <preference for="Mageplaza\StoreCredit\Api\Data\OrderInterface" type="Mageplaza\StoreCredit\Model\Order"/>
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="mp_store_credit_order" type="Mageplaza\StoreCredit\Plugin\Api\OrderGet"/>
    </type>

    <preference for="Mageplaza\StoreCredit\Api\Data\InvoiceInterface" type="Mageplaza\StoreCredit\Model\Invoice"/>
    <type name="Magento\Sales\Api\InvoiceRepositoryInterface">
        <plugin name="mp_store_creditinvoice" type="Mageplaza\StoreCredit\Plugin\Api\InvoiceGet"/>
    </type>

    <preference for="Mageplaza\StoreCredit\Api\Data\CreditmemoInterface" type="Mageplaza\StoreCredit\Model\Creditmemo"/>
    <type name="Magento\Sales\Api\CreditmemoRepositoryInterface">
        <plugin name="mp_store_credit_creditmeo" type="Mageplaza\StoreCredit\Plugin\Api\CreditmemoGet"/>
    </type>

    <type name="Magento\Quote\Model\Quote\Item\Repository">
        <arguments>
            <argument name="cartItemProcessors" xsi:type="array">
                <item name="mpstorecredit" xsi:type="object">Mageplaza\StoreCredit\Model\Quote\Item\CartItemProcessor\Proxy</item>
            </argument>
        </arguments>
    </type>

    <type name="Mageplaza\Affiliate\Helper\Data">
        <plugin name="mp_store_credit_affiliate_check_module_version" type="Mageplaza\StoreCredit\Plugin\Affiliate\Helper\Data"/>
    </type>
    <type name="Mageplaza\Affiliate\Model\Withdraw">
        <plugin name="mp_store_credit_affiliate_process_withdraw" type="Mageplaza\StoreCredit\Plugin\Affiliate\Withdraw"/>
    </type>
</config>
