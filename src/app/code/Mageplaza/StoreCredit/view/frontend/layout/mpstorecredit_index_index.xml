<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Mageplaza_Core::css/grid-mageplaza.css"/>
        <css src="Mageplaza_StoreCredit::css/dashboard.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\StoreCredit\Block\Account\Dashboard" name="mpstorecredit_dashboard" template="Mageplaza_StoreCredit::account/dashboard.phtml" cacheable="false">
                <block class="Mageplaza\StoreCredit\Block\Account\Dashboard\Balance" name="mpstorecredit_dashboard_balance" template="Mageplaza_StoreCredit::account/dashboard/balance.phtml"/>
                <block class="Mageplaza\StoreCredit\Block\Account\Dashboard\Transaction" name="mpstorecredit_dashboard_transaction" template="Mageplaza_StoreCredit::account/dashboard/transaction.phtml"/>
                <block class="Mageplaza\StoreCredit\Block\Account\Dashboard\Setting" name="mpstorecredit_dashboard_setting" template="Mageplaza_StoreCredit::account/dashboard/setting.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
