<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
<!--    ================================================ CUSTOMER ============================================-->
    <event name="customer_save_before">
        <observer name="mp_customer_model_save_before" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerSaveBefore"/>
    </event>
    <event name="customer_save_after">
        <observer name="mp_customer_model_save_after" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerSaveAfter"/>
    </event>
    <event name="customer_address_save_after">
        <observer name="mp_customer_address_save_after" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerAddressSaveAfter"/>
    </event>
    <event name="customer_address_save_before">
        <observer name="mp_customer_address_save_before" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerAddressSaveBefore"/>
    </event>
    <event name="customer_save_commit_after">
        <observer name="mp_zoho_customer_save_commit_after" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerSaveCommitAfter"/>
    </event>
    <event name="customer_delete_commit_after">
        <observer name="mp_zoho_customer_delete" instance="Mageplaza\ZohoCRM\Observer\Customer\CustomerCommitDelete"/>
    </event>
    <!--    ========================================= CATALOG RULE ============================================-->
    <event name="catalogrule_rule_save_before">
        <observer name="mp_catalogrule_rule_model_save_before" instance="Mageplaza\ZohoCRM\Observer\CatalogRule\CatalogRuleSaveBefore"/>
    </event>
    <event name="catalogrule_rule_delete_commit_after">
        <observer name="mp_zoho_catalogrule_rule_delete" instance="Mageplaza\ZohoCRM\Observer\CatalogRule\CatalogRuleCommitDelete"/>
    </event>
    <event name="catalogrule_rule_save_after">
        <observer name="mp_zoho_catalogrule_save" instance="Mageplaza\ZohoCRM\Observer\CatalogRule\CatalogRuleSaveAfter"/>
    </event>
    <event name="catalogrule_rule_save_commit_after">
        <observer name="mp_zoho_catalogrule_save_commit" instance="Mageplaza\ZohoCRM\Observer\CatalogRule\CatalogRuleSaveCommitAfter"/>
    </event>
    <!--    ========================================= PRODUCT ============================================-->
    <event name="catalog_product_save_before">
        <observer name="mp_catalog_product_model_save_before" instance="Mageplaza\ZohoCRM\Observer\Product\ProductSaveBefore"/>
    </event>
    <event name="catalog_product_save_after">
        <observer name="mp_zoho_product_save_after" instance="Mageplaza\ZohoCRM\Observer\Product\ProductSaveAfter"/>
    </event>
    <event name="catalog_product_save_commit_after">
        <observer name="mp_zoho_product_save_commit_after" instance="Mageplaza\ZohoCRM\Observer\Product\ProductSaveCommitAfter"/>
    </event>
    <event name="catalog_product_delete_commit_after">
        <observer name="mp_zoho_product_delete" instance="Mageplaza\ZohoCRM\Observer\Product\ProductCommitDelete"/>
    </event>
    <!--    ========================================= ORDER ============================================-->
    <event name="sales_order_save_before">
        <observer name="mp_sales_order_model_save_before" instance="Mageplaza\ZohoCRM\Observer\Order\OrderSaveBefore"/>
    </event>
    <event name="sales_order_save_after">
        <observer name="mp_zoho_order_save_after" instance="Mageplaza\ZohoCRM\Observer\Order\OrderSaveAfter"/>
    </event>
    <event name="sales_order_delete_before">
        <observer name="mp_zoho_order_delete_before" instance="Mageplaza\ZohoCRM\Observer\Order\OrderDeleteBefore"/>
    </event>
    <event name="sales_order_save_commit_after">
        <observer name="mp_zoho_order_save_commit_after" instance="Mageplaza\ZohoCRM\Observer\Order\OrderSaveCommitAfter"/>
    </event>
    <event name="sales_order_delete_commit_after">
        <observer name="mp_zoho_order_delete" instance="Mageplaza\ZohoCRM\Observer\Order\OrderCommitDelete"/>
    </event>
    <!--    ========================================= INVOICE ============================================-->
    <event name="sales_order_invoice_save_before">
        <observer name="mp_sales_order_invoice_model_save_before" instance="Mageplaza\ZohoCRM\Observer\Invoice\InvoiceSaveBefore"/>
    </event>
    <event name="sales_order_invoice_save_commit_after">
        <observer name="mp_zoho_invoice_save_commit_after" instance="Mageplaza\ZohoCRM\Observer\Invoice\InvoiceSaveCommitAfter"/>
    </event>
    <event name="sales_order_invoice_delete_commit_after">
        <observer name="mp_zoho_invoice_delete" instance="Mageplaza\ZohoCRM\Observer\Invoice\InvoiceCommitDelete"/>
    </event>
    <event name="sales_order_invoice_save_after">
        <observer name="mp_zoho_invoice_save_after" instance="Mageplaza\ZohoCRM\Observer\Invoice\InvoiceSaveAfter"/>
    </event>
</config>
