<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mpzoho_sync_listing_data_source" xsi:type="string">Mageplaza\ZohoCRM\Model\ResourceModel\Sync\Grid\Collection</item>
                <item name="mpzoho_queue_listing_data_source" xsi:type="string">MpZohoQueueGridCollection</item>
            </argument>
        </arguments>
    </type>
    <type name="Mageplaza\ZohoCRM\Model\ResourceModel\Sync\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">mageplaza_zoho_sync</argument>
            <argument name="resourceModel" xsi:type="string">Mageplaza\ZohoCRM\Model\ResourceModel\Sync</argument>
        </arguments>
    </type>
    <type name="Mageplaza\Reports\Block\Menu">
        <arguments>
            <argument name="girdName" xsi:type="array">
                <item name="mpzoho_sync_index" xsi:type="string">mpzoho_sync_listing.mpzoho_sync_listing_data_source</item>
            </argument>
            <argument name="menuUrls" xsi:type="array">
                <item name="mpzoho/sync/index" xsi:type="string" translate="true">Zoho CRM</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="MpZohoQueueGridCollection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mageplaza_zoho_queue</argument>
            <argument name="resourceModel" xsi:type="string">Mageplaza\ZohoCRM\Model\ResourceModel\Queue</argument>
        </arguments>
    </virtualType>
    <type name="Mageplaza\ZohoCRM\Model\MagentoObjectFactory">
        <arguments>
            <argument name="map" xsi:type="array">
                <item name="product" xsi:type="string">Magento\Catalog\Model\Product</item>
                <item name="customer" xsi:type="string">Magento\Customer\Model\Customer</item>
                <item name="catalog_rule" xsi:type="string">Magento\CatalogRule\Model\Rule</item>
                <item name="order" xsi:type="string">Magento\Sales\Model\Order</item>
                <item name="invoice" xsi:type="string">Magento\Sales\Model\Order\Invoice</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Eav\Model\Entity\AbstractEntity">
        <plugin name="mpzoho_add_attribute" type="Mageplaza\ZohoCRM\Plugin\ZohoDefaultAttributes" />
    </type>
</config>
