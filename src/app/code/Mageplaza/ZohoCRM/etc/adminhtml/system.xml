<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="zohoCRM" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Zoho CRM</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_ZohoCRM::configuration</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="client_id" translate="label comment" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client ID</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment><![CDATA[Get Client ID <a href="https://accounts.zoho.com/developerconsole" target="_bank">here</a>]]></comment>
                </field>
                <field id="client_secret" translate="label comment" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Client Secret</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <comment><![CDATA[Get Client Secret <a href="https://accounts.zoho.com/developerconsole" target="_bank">here</a>]]></comment>
                </field>
                <field id="redirect_URIs" translate="label comment" type="text" sortOrder="31" showInDefault="1" showInWebsite="1" showInStore="1" >
                    <label>Authorized Redirect URIs</label>
                    <comment>Copy and paste this value to Authorized Redirect URIs field on Zoho Client ID Details</comment>
                </field>
                <field id="domain_users" translate="label comment" type="select" sortOrder="32" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Domain Users</label>
                    <source_model>Mageplaza\ZohoCRM\Model\Source\DomainUsers</source_model>
                    <comment>Select domain users for your Zoho account</comment>
                </field>
                <field id="bt_get_access_token" translate="label comment" type="button" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Mageplaza\ZohoCRM\Block\Adminhtml\System\Config\AccessToken</frontend_model>
                    <comment>Please save Client ID, Client Secret, Authorized Redirect URIs before getting Access Token</comment>
                </field>
            </group>
            <group id="queue_schedule" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Queue Schedule</label>
                <field id="delete_after" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Delete Queue Log After</label>
                    <comment>day(s). If empty, Log will no longer be deleted.</comment>
                    <validate>validate-digits validate-digits-range digits-range-1-365</validate>
                </field>
                <field id="schedule" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Schedule</label>
                    <source_model>Mageplaza\ZohoCRM\Model\Source\Schedule</source_model>
                    <comment>The time to automatically synchronize the data sent to Zoho Module</comment>
                </field>
                <field id="number_of_obj_per_time" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Number Of Objects Per Time</label>
                    <validate>validate-digits validate-digits-range digits-range-0-1000</validate>
                    <comment>The value is allowed to range from 1 to 1000. If empty or zero, schedule is not run.</comment>
                </field>
            </group>
            <group id="developer" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Developer</label>
                <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Developer Mode</label>
                    <source_model>Mageplaza\ZohoCRM\Model\Source\Mode</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
