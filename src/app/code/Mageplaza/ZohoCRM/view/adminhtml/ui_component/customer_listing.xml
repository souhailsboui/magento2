<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="add_to_queue_as_account">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to add the selected customers?</message>
                        <title translate="true">Add items</title>
                    </confirm>
                    <url path="mpzoho/customer/massAccount"/>
                    <type>account</type>
                    <label translate="true">Add To Zoho Queue As Account</label>
                </settings>
            </action>
            <action name="add_to_queue_as_lead">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to add the selected customers?</message>
                        <title translate="true">Add items</title>
                    </confirm>
                    <url path="mpzoho/customer/massLead"/>
                    <type>lead</type>
                    <label translate="true">Add To Zoho Queue As Lead</label>
                </settings>
            </action>
            <action name="add_to_queue_as_contact">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to add the selected customers?</message>
                        <title translate="true">Add items</title>
                    </confirm>
                    <url path="mpzoho/customer/massContact"/>
                    <type>contact</type>
                    <label translate="true">Add To Zoho Queue As Contact</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
